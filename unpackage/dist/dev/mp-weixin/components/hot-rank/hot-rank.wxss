.hot-rank {
  width: 310rpx;
  height: 505rpx;
  background: #FF9E39;
  padding: 24rpx 16rpx;
}
.hot-rank .top {
  color: white;
  font-weight: 700;
}
.hot-rank .top .title {
  font-size: 32rpx;
  letter-spacing: 4rpx;
}
.hot-rank .top .sub-title {
  font-size: 28rpx;
  padding: 16rpx 0;
  letter-spacing: 2rpx;
}
.hot-rank .items {
  background: #ffffff;
  padding: 16rpx 0 0 16rpx;
  -webkit-border-radius: 6rpx;
          border-radius: 6rpx;
}
.hot-rank .items .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.hot-rank .items .item .left {
  overflow: hidden;
  position: relative;
  width: 150rpx;
}
.hot-rank .items .item .left .rank {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 999;
  width: 50rpx;
  height: 50rpx;
}
.hot-rank .items .item .left .good_img {
  z-index: 998;
  width: 120rpx;
  height: 120rpx;
}
.hot-rank .items .item .right {
  width: 200rpx;
  color: #999;
  line-height: 60rpx;
}
.hot-rank .items .item .right .price {
  font-size: 32rpx;
  color: red;
  font-weight: 800;
}
.hot-rank .items .item .right .price .icon-renminbi {
  font-size: 28rpx;
}
.hot-rank .items .item .right .sell-count {
  font-size: 32rpx;
  color: #999;
}
.hot-rank .items .item .right .sell-count text {
  margin-left: 8rpx;
}

