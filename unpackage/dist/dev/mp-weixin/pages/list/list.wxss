page {
  height: 100%;
}
page .goods-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 100%;
}
page .goods-list .left-nav {
  height: 100%;
  width: 150rpx;
  font-size: 24rpx;
  text-align: center;
}
page .goods-list .left-nav view {
  line-height: 50px;
  margin: 0 0 1rpx 0;
}
page .goods-list .left-nav .active {
  background: #dbdbdb;
  border-left: 3px solid #0A800A;
}
page .goods-list .right-nav {
  width: 600rpx;
  height: 100%;
}
page .goods-list .right-nav .top-img {
  width: 100%;
  height: 250rpx;
}
page .goods-list .right-nav .list-name {
  color: #0A800A;
  text-align: center;
  padding: 20rpx 0 24rpx 0;
}
page .goods-list .right-nav .goods-list-box {
  margin: 0 10px;
}
page .goods-list .right-nav .middle-nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  font-size: 24rpx;
}
page .goods-list .right-nav .middle-nav .item {
  background-color: #dbdbdb;
  padding: 8rpx 30rpx;
  -webkit-border-radius: 12rpx;
          border-radius: 12rpx;
  margin: 16rpx 0;
}
page .goods-list .right-nav .middle-nav .mactive {
  background-color: #AAF3AA;
  color: #0A800A;
}

