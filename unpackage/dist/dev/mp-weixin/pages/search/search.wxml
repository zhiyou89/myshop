<view class="search-page"><view class="search"><view class="wrap"><view class="iconfont icon-sousuo"></view><view class="input-wrap"><input class="uni-input" focus="{{true}}" placeholder="{{setting.search_text}}" placeholder-class="input-placeholder" data-event-opts="{{[['input',[['__set_model',['','inputText','$event',[]]]]]]}}" value="{{inputText}}" bindinput="__e"/></view><view data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" class="search-but" bindtap="__e">搜索</view></view></view><view class="search-items"><view class="history"><view class="name">搜索历史</view><block wx:if="{{history.length}}"><view class="items"><block wx:for="{{history}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['historySubmit',['$0'],[[['history','',index,'info']]]]]]]}}" class="item" bindtap="__e">{{''+item.info+''}}</view></block></view></block><block wx:if="{{!history.length}}"><view class="no-history"><text>-----暂无历史搜索记录-----</text></view></block></view><view class="search-rank"><view class="name">热门搜索</view><view class="items"><block wx:for="{{product}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block wx:if="{{product.length}}"><view data-event-opts="{{[['tap',[['navigate_to',['/pages/good/good?id='+item.id+'&category_id='+item.category_id]]]]]}}" class="item" bindtap="__e"><view class="img"><image src="{{item.main_img_url}}"></image></view><view class="good-detail">{{''+item.product_describe+''}}</view></view></block></block><block wx:if="{{!product.length}}"><view class="no-data"><text>没有找到您要得商品</text></view></block></view></view></view></view>