.cart {
  margin: 0 0 120rpx 0;
}
.cart .cart-empty {
  padding: 400rpx 0 0 0;
  color: #999;
  text-align: center;
}
.cart .cart-empty image {
  width: 25%;
}
.cart .cart-empty .button {
  padding-top: 24rpx;
  color: green;
}
.cart .cart-top {
  background: #fff;
  padding-bottom: 24rpx;
}
.cart .cart-top .title-name {
  text-align: center;
  line-height: 50px;
  font-size: 32rpx;
}
.cart .cart-top .notice {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin: 0 20rpx;
}
.cart .cart-top .notice .money, .cart .cart-top .notice .right {
  color: red;
}
.cart .cart-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: #ffffff;
  margin: 16rpx 20rpx;
  -webkit-border-radius: 12rpx;
          border-radius: 12rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.cart .cart-content .checkbox-but {
  width: 100rpx;
  padding-left: 20rpx;
}
.cart .cart-content .img {
  width: 150rpx;
}
.cart .cart-content .img image {
  width: 150rpx;
  height: 150rpx;
}
.cart .cart-content .detail {
  width: 600rpx;
  padding: 16rpx 20rpx;
}
.cart .cart-content .detail .content {
  font-weight: 550;
}
.cart .cart-content .detail .good-badge {
  font-size: 18rpx;
  color: red;
  margin: 24rpx 0;
}
.cart .cart-content .detail .good-badge text {
  margin: 0 8rpx 0 0;
  padding: 8rpx 16rpx;
  border: 1px solid red;
  -webkit-border-radius: 6rpx;
          border-radius: 6rpx;
}
.cart .cart-content .detail .spec {
  padding-top: 16rpx;
  color: #999;
}
.cart .cart-content .detail .price-and-good-count {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.cart .cart-content .detail .price-and-good-count .price {
  color: red;
}
.cart .cart-content .detail .price-and-good-count .price .icon-renminbi {
  font-size: 25rpx;
  padding-right: 5rpx;
}
.cart .cart-content .detail .price-and-good-count .price text {
  font-weight: 550;
  color: red;
  font-size: 32rpx;
}
.cart .cart-content .detail .price-and-good-count .number-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border: 1px solid #c8c7cc;
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
}
.cart .cart-content .detail .price-and-good-count .number-box .iconfont {
  width: 40rpx;
  background-color: #f8f8f8;
}
.cart .cart-content .detail .price-and-good-count .number-box .number {
  width: 40rpx;
  font-size: 24rpx;
}
.ordered-controll {
  z-index: 999;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  height: 100rpx;
  background: #ffffff;
  border-top: 1px solid #c8c7cc;
  line-height: 100rpx;
}
.ordered-controll .left-radio .uni-radio {
  width: 30rpx;
  height: 30rpx;
}
.ordered-controll .middle-count .icon-renminbi {
  font-size: 25rpx;
  color: red;
  padding-right: 5rpx;
  font-weight: 550;
}
.ordered-controll .middle-count .count {
  font-weight: 550;
  font-size: 32rpx;
  color: red;
}
.ordered-controll .bottom-ordered .my-button {
  text-align: center;
}
.ordered-controll .bottom-ordered .my-button text {
  -webkit-border-radius: 2em;
          border-radius: 2em;
  background: #0A800A;
  padding: 20rpx 50rpx;
  color: #fff;
}

