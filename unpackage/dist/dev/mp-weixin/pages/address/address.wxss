.no-message {
  text-align: center;
}
.no-message image {
  margin-top: 200rpx;
  width: 20%;
}
.address-box .item {
  background-color: #ffffff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 24rpx 20rpx;
  margin: 0 0 1rpx 0;
}
.address-box .item .center-border {
  margin-top: 20rpx;
  height: 50rpx;
  border-right: 1px solid #c8c7cc;
}
.address-box .item .left {
  width: 85%;
}
.address-box .item .left .address {
  font-size: 28rpx;
  font-weight: 550;
  line-height: 70rpx;
}
.address-box .item .left .link {
  color: #999;
  line-height: 30rpx;
  font-size: 24rpx;
}
.address-box .item .right {
  line-height: 90rpx;
  text-align: center;
  width: 15%;
}
.address-box .but {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.address-box .but view {
  width: 100%;
}
.address-box .but view button {
  margin: 30rpx;
  background-color: #0A800A;
}

